{
  "manifest_version": 3,
  "name": "Bilibili Video Analyzer",
  "version": "1.0",
  "description": "Analyze individual Bilibili video engagement data (likes, coins, favorites, shares)",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*.bilibili.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Bilibili Video Analyzer"
  },

  "icons": {
    "16": "icon.svg",
    "48": "icon.svg", 
    "128": "icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*"],
      "js": ["content.js"]
    }
  ]
}