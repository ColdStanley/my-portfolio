{
  "manifest_version": 3,
  "name": "LinkedIn to Notion JD2CV Sync",
  "version": "1.0.0",
  "description": "Automatically sync LinkedIn job postings to your Notion JD2CV database",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "scripts/linkedin-notion-background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/view/*",
        "https://linkedin.com/jobs/view/*"
      ],
      "js": ["scripts/linkedin-data-extractor.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/linkedin-sync-popup.html"
  }
}