{
  "manifest_version": 3,
  "name": "LinkedIn to Notion JD2CV Sync",
  "version": "1.0.0",
  "description": "Automatically sync LinkedIn job postings to your Notion JD2CV database",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "scripts/linkedin-notion-background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["scripts/linkedin-data-extractor.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/linkedin-sync-popup.html",
    "default_icon": {
      "16": "icons/linkedin-notion-16.png",
      "32": "icons/linkedin-notion-32.png",
      "48": "icons/linkedin-notion-48.png",
      "128": "icons/linkedin-notion-128.png"
    }
  },
  
  "icons": {
    "16": "icons/linkedin-notion-16.png",
    "32": "icons/linkedin-notion-32.png",
    "48": "icons/linkedin-notion-48.png",
    "128": "icons/linkedin-notion-128.png"
  }
}